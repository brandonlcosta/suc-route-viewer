{
  "version": 8,
  "name": "SUC Dark Navy 3D",
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",

  "sources": {
    "terrain-dem": {
      "type": "raster-dem",
      "tiles": [
        "https://s3.amazonaws.com/elevation-tiles-prod/terrarium/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "maxzoom": 13
    },

    "dark-base": {
      "type": "raster",
      "tiles": [
        "https://a.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}.png",
        "https://b.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}.png",
        "https://c.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}.png",
        "https://d.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "maxzoom": 19
    },

    "opentopo-lines": {
      "type": "raster",
      "tiles": [
        "https://tile.opentopomap.org/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "maxzoom": 17
    }
  },

  "terrain": {
    "source": "terrain-dem",
    "exaggeration": 0.075
  },

  "fog": {
    "range": [0.6, 2.0],
    "color": "#050816",
    "horizon-blend": 0.16,
    "high-color": "#0b1426",
    "space-color": "#000009",
    "star-intensity": 0.0
  },

  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#050814"
      }
    },

    {
      "id": "dark-base",
      "type": "raster",
      "source": "dark-base",
      "paint": {
        "raster-opacity": 1.0,
        "raster-saturation": 0.0,
        "raster-brightness-min": 0.1,
        "raster-brightness-max": 0.8,
        "raster-contrast": 0.3,
        "raster-hue-rotate": -6
      }
    },

    {
      "id": "opentopo-lines-layer",
      "type": "raster",
      "source": "opentopo-lines",
      "paint": {
        "raster-opacity": 0.35,
        "raster-saturation": -1.0,
        "raster-brightness-min": 0.55,
        "raster-brightness-max": 0.9,
        "raster-contrast": 0.45,
        "raster-hue-rotate": 0
      }
    }
  ]
}
