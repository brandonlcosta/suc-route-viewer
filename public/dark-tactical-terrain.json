{
  "version": 8,
  "name": "SUC Dark 3D Lite",
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",

  "sources": {
    "terrain-dem": {
      "type": "raster-dem",
      "tiles": [
        "https://s3.amazonaws.com/elevation-tiles-prod/terrarium/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "maxzoom": 13
    },

    "basemap": {
      "type": "raster",
      "tiles": [
        "https://tile.opentopomap.org/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "maxzoom": 17
    }
  },

  "terrain": {
    "source": "terrain-dem",
    "exaggeration": 0.30
  },

  "fog": {
    "range": [0.7, 2.0],
    "color": "#050814",
    "horizon-blend": 0.12,
    "high-color": "#0d1630",
    "space-color": "#000008",
    "star-intensity": 0.0
  },

  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#03040a"
      }
    },

    {
      "id": "basemap",
      "type": "raster",
      "source": "basemap",
      "paint": {
        "raster-opacity": 0.9,
        "raster-saturation": -1.0,
        "raster-brightness-min": 0.18,
        "raster-brightness-max": 0.9,
        "raster-contrast": 0.3,
        "raster-hue-rotate": 0
      }
    }
  ]
}
