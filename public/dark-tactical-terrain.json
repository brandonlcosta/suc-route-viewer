{
  "version": 8,
  "name": "SUC Minimal Dark Topo 3D",
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",

  "sources": {
    "terrain-dem": {
      "type": "raster-dem",
      "tiles": [
        "https://s3.amazonaws.com/elevation-tiles-prod/terrarium/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "maxzoom": 13
    },
    "topo-raster": {
      "type": "raster",
      "tiles": [
        "https://tile.opentopomap.org/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "maxzoom": 17
    }
  },

  "terrain": {
    "source": "terrain-dem",
    "exaggeration": 0.075
  },

  "fog": {
    "range": [0.7, 2.0],
    "color": "#050814",
    "horizon-blend": 0.15,
    "high-color": "#0b1528",
    "space-color": "#000008",
    "star-intensity": 0.0
  },

  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#050814"
      }
    },
    {
      "id": "topo-minimal",
      "type": "raster",
      "source": "topo-raster",
      "paint": {
        "raster-opacity": 0.30,
        "raster-saturation": -1.0,
        "raster-brightness-min": 0.55,
        "raster-brightness-max": 0.85,
        "raster-contrast": 0.4,
        "raster-hue-rotate": 0
      }
    }
  ]
}
